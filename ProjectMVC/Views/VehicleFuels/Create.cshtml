
@model ProjectMVC.Logica.Models.BindingModels.VehicleFuelsCreateBindingModel
@{
    ViewBag.Title = "Create";
}

<h2>Create Vehicle Fuels</h2>

<form action="/VehicleFuels/Create" method="post">

    <div class="form-row">
        <div class="col-md-8">
            @Html.LabelFor(m => m.TypeFuelId)
            @Html.DropDownListFor(m => m.TypeFuelId, new SelectList(ViewBag.TypeFuels, "Id", "Name", "Active"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TypeFuelId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Amount)
            @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.LiterFuel)
            @Html.EditorFor(m => m.LiterFuel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.LiterFuel, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-8">
            @Html.LabelFor(m => m.VehicleId)
            @Html.DropDownListFor(m => m.VehicleId, new SelectList(ViewBag.Vehicles, "Id", "LicensePlate"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.VehicleId, "", new { @class = "text-danger" })
        </div>
    </div>    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <button type="submit" value="" class="btn btn-primary"><i class="fas fa-save"></i></button>
            @Html.ActionLink(" ", "Index", "VehicleFuels", null, new { @class = "btn btn-primary fas fa-undo-alt" })
        </div>
    </div>

</form>