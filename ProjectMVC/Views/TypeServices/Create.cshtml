@model ProjectMVC.Logica.Models.BindingModels.TypeServicesCreateBindingModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="/TypeServices/Create" method="post">

    <div class="form-row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Id)
            @Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Active)
            @Html.EditorFor(m => m.Active, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Active, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12">
            <br />
            <button type="submit" value="" class="btn btn-primary"><i class="fas fa-save"></i></button>
            @Html.ActionLink(" ", "Index", "TypeServices", null, new { @class = "btn btn-primary fas fa-undo-alt" })
        </div>
    </div>

</form>
